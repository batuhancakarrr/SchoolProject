@using School.Data.Entities
@using School.Dto

@section Styles {
	<link href="~/css/classDetail.css" rel="stylesheet" />
}
@{
	var breadcrumbs = new List<PartialRouteModel> {
		new("Ana Sayfa", "/Main/Index"),
		new("Sınıflar","/Classes"),
		new("Detay"),
	};
}
@model ClassDTO

<section>
	<partial name="_Breadcrumb" model="breadcrumbs" />
	<div>
		<table>
			<caption><h2>Sınıfın Öğrencileri</h2></caption>
			<thead>
				<tr>
					<th>Öğrenci ID</th>
					<th>Adı</th>
				</tr>
			</thead>
			<tbody>
				@foreach (StudentDTO student in Model.Students) {
					<tr>
						<td>@student.Id</td>
						<td>@student.Name</td>
					</tr>
				}
			</tbody>
		</table>

		<table>
			<caption><h2>Sınıfın Eğitmenleri</h2></caption>
			<thead>
				<tr>
					<th>Öğretmen ID</th>
					<th>Adı</th>
					<th>Branşı</th>
				</tr>
			</thead>
			<tbody>
				@foreach (ClassTeacherDTO classteacher in Model.ClassTeachers) {
					<tr>
						<td>@classteacher.TeacherId</td>
						<td>@classteacher.Teacher.Name</td>
						<td>@classteacher.Teacher.Branch</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</section>

