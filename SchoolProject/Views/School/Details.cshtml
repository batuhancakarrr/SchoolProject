@using School.Data.Entities
@using School.Dto

@section Styles {
	<link href="~/css/schoolDetail.css" rel="stylesheet" />
}
@{
	var breadcrumbs = new List<PartialRouteModel> {
		new("Ana Sayfa", "/Main/Index"),
		new("Okullar","/Schools"),
		new("Detay"),
	};
}
@model List<StudentDTO>

<section>
	<partial name="_Breadcrumb" model="breadcrumbs" />

	<table>
		<caption><h2>Okulun Öğrencileri</h2></caption>
		<thead>
			<tr>
				<th>Öğrenci ID</th>
				<th>Adı</th>
				<th>Sınıfı</th>
			</tr>
		</thead>
		<tbody>
			@foreach (StudentDTO student in Model) {
				<tr>
					<td>@student.Id</td>
					<td>@student.Name</td>
					<td>@(student.Class.Degree)-@(student.Class.Name)</td>
				</tr>
			}
		</tbody>
	</table>
</section>


