@using EntitySchool = School.Data.Entities.School
@section Styles {
	<link href="~/css/schoollist.css" rel="stylesheet" />
}

@model List<EntitySchool>

<h1>Okullar</h1>
<!-- popup -->
<div id="overlay">
	<div id="formPopUp">
		<h1>Okul Düzenle</h1>
		<form>
			<input type="hidden" id="schoolId" />
			<label>Okul Adı</label>
			<input type="text" id="schoolName" required />
			<label>Adres</label>
			<input type="text" id="address" required />
			<span>
				<div onclick="closePopup()">İptal et</div>
				<button type="button" id="kaydet" >Kaydet</button>
			</span>
		</form>
	</div>
</div>


<section>
	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>Okul İsmi</th>
				<th>Adres</th>
				<th>Bilgi</th>
				<th>Düzenle</th>
			</tr>
		</thead>
		<tbody>
			@foreach (EntitySchool school in Model) {
				<tr>
					<td>@school.Id</td>
					<td>@school.Name</td>
					<td>@school.Address</td>
					<td>
						<a href="/Schools/Details/@school.Id">
							<i class="fa-solid fa-circle-info"></i>
						</a>
					</td>
					<td>
						<i data-id="@school.Id" class="fa-solid fa-pen-to-square edit"></i>
					</td>
				</tr>
			}
		</tbody>
	</table>
</section>

@section Scripts
	{
	<script src="~/js/school.js"></script>
}